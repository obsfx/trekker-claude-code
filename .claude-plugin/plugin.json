{
  "name": "trekker",
  "description": "AI-optimized issue tracker for coding workflows. Manage tasks, epics, and dependencies with simple CLI commands.",
  "version": "0.2.2",
  "author": {
    "name": "Omercan Balandi",
    "url": "https://github.com/obsfx"
  },
  "repository": "https://github.com/obsfx/trekker-claude-code",
  "license": "MIT",
  "homepage": "https://github.com/obsfx/trekker-claude-code",
  "keywords": [
    "issue-tracker",
    "task-management",
    "ai-workflow",
    "agent-memory"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact.sh"
          }
        ]
      }
    ]
  }
}
